<%- include("partials/header") %>

<div class="ui raised segment">
	<h2>  New Blog </h2>	
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="Give a title to your post!">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="URL..">
		</div>
		<div class="field">
			<label>Content</label>
			<textarea name="blog[body]"></textarea>
		</div>
		<button class="ui grey toggle button" type="submit"> Submit </button>
	</form>

</div>



<%- include("partials/footer") %>